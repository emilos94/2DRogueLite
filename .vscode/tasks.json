{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.c",
                "${workspaceFolder}\\src\\engine\\*.c",
                "${workspaceFolder}\\src\\engine\\files\\*.c",
                "${workspaceFolder}\\src\\engine\\input\\*.c",
                "${workspaceFolder}\\src\\engine\\render\\*.c",
                "${workspaceFolder}\\src\\engine\\window\\*.c",
                "${workspaceFolder}\\src\\game\\*.c",
                "-I",
                "${workspaceFolder}\\dependencies\\include",
                "-I",
                "${workspaceFolder}\\src",
                "-o",
                "${workspaceFolder}\\build\\main.exe",
                "-L${workspaceFolder}\\dependencies\\lib",
                "-lglfw3",
                "-lopengl32",
                "-lkernel32",
                "-lgdi32",
                "-luser32",
                "-l:cglm.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}